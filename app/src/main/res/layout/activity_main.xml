<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#4F83CC"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo400big"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="150dp"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AR-Viet"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btn_dangnhap"
            android:layout_below="@+id/tv_name"
            android:textColor="@color/white"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            app:cornerRadius="30dp"
            android:text="ĐĂNG NHẬP"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="320dp"
            android:layout_height="65dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="250dp"
            />
        <Button
            android:id="@+id/btn_dangky"
            android:layout_width="320dp"
            android:layout_height="65dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_dangnhap"
            android:layout_marginTop="10dp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            app:cornerRadius="30dp"
            android:backgroundTint="@color/white"
            android:text="ĐĂNG ký"
            android:textSize="25dp"
            android:textColor="#4F83CC"
            android:textStyle="bold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>