    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LessonListAcitivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_dsbg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            >
        <TextView
            android:id="@+id/textViewLessonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="30dp"
            android:text="Tên bài giảng 1"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/textViewTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/textViewLessonName"
            app:layout_constraintTop_toBottomOf="@id/textViewLessonName"
            android:text="Tên giáo viên"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            />
        <ImageView
            android:id="@+id/imageViewBin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewLessonName"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            />
        <View
            android:id="@+id/line_tbg1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0CBCB"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTeacherName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
