<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/register_view"
        tools:context=".RegisterActivity">

        <TextView
            android:id="@+id/txv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐĂNG KÝ"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"/>
        <TextView
            android:id="@+id/txv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txv_login"
            app:layout_constraintLeft_toLeftOf="@id/txi_username"
            android:layout_marginTop="50dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txi_username"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_username"
            app:boxBackgroundColor="@color/white"
            android:enabled="true"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            app:hintEnabled="false"
            app:helperTextEnabled="true"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingTop="15dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ Tên"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txi_username"
            app:layout_constraintLeft_toLeftOf="@id/txi_username"
            android:layout_marginTop="20dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txi_name"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_name"
            app:boxBackgroundColor="@color/white"
            android:enabled="true"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            app:hintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingTop="15dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/txv_dateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txi_name"
            app:layout_constraintLeft_toLeftOf="@id/txi_username"
            android:layout_marginTop="20dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txi_dateOfBirth"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_dateOfBirth"
            app:boxBackgroundColor="@color/white"
            android:enabled="true"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_dateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="none"
                android:paddingTop="15dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txi_dateOfBirth"
            app:layout_constraintLeft_toLeftOf="@id/txi_dateOfBirth"
            android:layout_marginTop="20dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txi_password"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_password"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            app:boxBackgroundColor="@android:color/transparent"
            app:passwordToggleEnabled="true"
            app:hintEnabled="false"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:paddingTop="6dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/txv_passwordagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận mật khẩu"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txi_password"
            app:layout_constraintLeft_toLeftOf="@id/txi_password"
            android:layout_marginTop="20dp"
            app:hintEnabled="false"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txi_passwordagain"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txv_passwordagain"
            android:enabled="true"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            app:boxBackgroundColor="@android:color/transparent"
            app:passwordToggleEnabled="true"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edt_passwordagian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:paddingTop="6dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:id="@+id/btn_register"
            android:layout_below="@+id/txv_login"
            android:textColor="@color/white"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            app:cornerRadius="30dp"
            android:text="ĐĂNG KÝ"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="300dp"
            android:layout_height="65dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txi_passwordagain"
            android:backgroundTint="#4F83CC"
            android:layout_marginTop="20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>